@model ToDoManager.WEB.DataAccess.Entities.Assignment

@section scripts{
    <script>
    $(document).ready(function () {
        $('select').material_select();
    });
    </script>
}
<div class="row">
    <div class="col s12 m6 push-m3" id="create-comment">
        <h2 class="center grey-text">Edit ToDo</h2>
        @using (Html.BeginForm("Edit", "Task"))
        {
            @Html.ValidationSummary(true, "", new { @class = "red-text" })
            @Html.HiddenFor(model=>model.Id)

            <div class="card white darken-3">
                <div class="card-content">
                    @Html.LabelFor(model => model.Name, new { @for = "company-name" })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "validate", maxlength = "50", minlength = "3", pattern = "^\\S.*$", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "red-text" })

                    @Html.LabelFor(model => model.Text, new { @for = "company-name" })
                    @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "validate", maxlength = "50", minlength = "3", pattern = "^\\S.*$", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Text, "", new { @class = "red-text" })
                    
                    <div class="input-field col s12">
                        <select name ="Status" required="required">
                            <option value="" disabled selected>Choose your option</option>
                            <option value="1">To Do</option>
                            <option value="2">In progress</option>
                            <option value="3">Done</option>
                        </select>
                        <label>Status</label>
                    </div>

                    <br />
                    <div class="center"><input type="submit" class="center btn btn-default" value="Edit" /></div>
                </div>
            </div>
        }
    </div>
</div>